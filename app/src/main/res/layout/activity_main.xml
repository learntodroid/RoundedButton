<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Default Button"
        android:layout_gravity="center" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rounded Button"
        android:background="@drawable/round_button"
        android:padding="6dp"
        android:layout_margin="4dp"
        android:layout_gravity="center"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rounded Gradient"
        android:background="@drawable/round_gradient_button"
        android:padding="6dp"
        android:layout_margin="4dp"
        android:layout_gravity="center"
        android:textColor="@android:color/white"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shadow Button"
        android:background="@drawable/round_shadow_button"
        android:padding="6dp"
        android:layout_margin="4dp"
        android:layout_gravity="center"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Circular"
        android:background="@drawable/circular_button"
        android:padding="6dp"
        android:layout_margin="4dp"
        android:layout_gravity="center"
        android:textColor="@android:color/white"
        />
</LinearLayout>